{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | List {% endblock %}

{% block body %}

<h2>List of series</h2>

    <section class = "seriesList">

        {% for serie in series %}
            <article>
                <a href="{{ path('serie_detail', {'id' : serie.id})}}" title="View details">
                    <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>
            {% else %}
            <p>Pas de séries à afficher</p>
        {% endfor %}

    </section>

{% endblock %}