{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | List {% endblock %}

{% block body %}

<h2>List of series</h2>

    {% if(currentPage>1) %}
    <a href="{{ path('serie_list', {'page' : currentPage-1}) }}">Previous Page</a>
    {% endif %}
    {% if(currentPage<maxPages) %}
    <a href="{{ path('serie_list', {'page' : currentPage+1}) }}">Next Page</a>
    {% endif %}

    <section class = "seriesList">

        {% for serie in series %}
            <article>
                <a href="{{ path('serie_detail', {'id' : serie.id})}}" title="{{ serie.name }} | {{ serie.seasons|length }} seasons">
                    <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>
            {% else %}
            <p>Pas de séries à afficher</p>
        {% endfor %}

    </section>

{% endblock %}